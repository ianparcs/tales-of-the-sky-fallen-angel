{
  BitmapFont: {
    main: {
      file: font/Adventurer.fnt
    }
    small: {
      file: font/Adventurer.fnt
      scaledSize:5
    }
    title: {
      file: font/Adventurer_title.fnt
    }
  }
  Color: {
    gray: {
      r: 0.2
      g: 0.2
      b: 0.2
      a: 1
    }
    white: { hex: #ffffff }
  }
  LabelStyle: {
    splash: {
      font: main
      fontColor: gray
    }
    title: {
      font: title
    }
    normal: {
      font: small
      fontColor: white
    }
  }
  TextButtonStyle: {
    menu_option: {
      font: main
      up: button
      down: button-press
      over: button-hover
    }
  }

  WindowStyle: {
    default: {
      background: window
      titleFont: title
    }
  }
}